{
  "name": "@dashdig/widget",
  "version": "1.0.0",
  "description": "AI-powered analytics widget for React, Vue, Angular, and vanilla JavaScript. Lightweight, fast, and easy to integrate.",
  "main": "dist/dashdig.min.js",
  "module": "dist/dashdig.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "exports": {
    ".": {
      "require": "./dist/dashdig.min.js",
      "import": "./dist/dashdig.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "require": "./dist/dashdig-react.min.js",
      "import": "./dist/dashdig-react.esm.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "require": "./dist/dashdig-vue.min.js",
      "import": "./dist/dashdig-vue.esm.js",
      "types": "./dist/vue/index.d.ts"
    },
    "./angular": {
      "require": "./dist/dashdig-angular.min.js",
      "import": "./dist/dashdig-angular.esm.js",
      "types": "./dist/angular/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build:core": "rollup -c --environment BUILD:core",
    "build:react": "rollup -c --environment BUILD:react",
    "build:vue": "rollup -c --environment BUILD:vue",
    "build:angular": "rollup -c --environment BUILD:angular",
    "build:prod": "npm run build && npm run compress",
    "compress": "node scripts/compress.js",
    "dev": "rollup -c -w",
    "dev:core": "rollup -c -w --environment BUILD:core",
    "dev:react": "rollup -c -w --environment BUILD:react",
    "dev:vue": "rollup -c -w --environment BUILD:vue",
    "dev:angular": "rollup -c -w --environment BUILD:angular",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:bench": "vitest bench",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "analyze": "rollup -c --environment ANALYZE",
    "verify": "node scripts/verify-build.js",
    "verify:browser": "open scripts/test-browser-compatibility.html",
    "deploy": "npm run build:prod && node scripts/deploy-cdn.js",
    "deploy:quick": "node scripts/deploy-cdn.js",
    "deploy:check": "node -e \"require('dotenv').config({path:'.env.local'}); const missing=[]; ['R2_ACCESS_KEY_ID','R2_SECRET_ACCESS_KEY','R2_ENDPOINT'].forEach(k=>{if(!process.env[k])missing.push(k)}); if(missing.length){console.error('❌ Missing:',missing.join(', ')); process.exit(1)} else console.log('✅ Config OK')\"",
    "prepublishOnly": "npm run build:prod && npm run verify && npm run test && npm run size",
    "validate": "npm run type-check && npm run lint && npm run test && npm run size && npm run verify"
  },
  "keywords": [
    "dashdig",
    "analytics",
    "widget",
    "embeddable",
    "tracking",
    "ai",
    "url-shortener",
    "link-tracking",
    "react",
    "vue",
    "angular",
    "typescript",
    "javascript",
    "web-analytics"
  ],
  "author": "DashDig <hello@dashdig.com> (https://dashdig.com)",
  "license": "MIT",
  "homepage": "https://dashdig.com/docs/widget",
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "rollup": "^3.29.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@angular/core": "^16.2.0",
    "@aws-sdk/client-s3": "^3.922.0",
    "@playwright/test": "^1.56.1",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@size-limit/time": "^11.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.0.0",
    "vitest": "^1.1.0",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "@angular/core": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    }
  },
  "resolutions": {
    "typescript": "^5.3.0",
    "rollup": "^3.29.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-commonjs": "^25.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dashdig/widget.git"
  },
  "bugs": {
    "url": "https://github.com/dashdig/widget/issues"
  },
  "size-limit": [
    {
      "name": "Vanilla JS Bundle (UMD) - Target: < 2KB gzipped",
      "path": "dist/dashdig.min.js",
      "limit": "2 KB",
      "gzip": true,
      "brotli": true,
      "running": false
    },
    {
      "name": "Vanilla JS Bundle (ESM) - Target: < 2KB gzipped",
      "path": "dist/dashdig.esm.js",
      "limit": "2 KB",
      "gzip": true,
      "brotli": true,
      "running": false
    },
    {
      "name": "React Bundle (UMD) - Target: < 5KB gzipped",
      "path": "dist/dashdig-react.min.js",
      "limit": "5 KB",
      "gzip": true,
      "brotli": true,
      "running": false
    },
    {
      "name": "React Bundle (ESM) - Target: < 5KB gzipped",
      "path": "dist/dashdig-react.esm.js",
      "limit": "5 KB",
      "gzip": true,
      "brotli": true,
      "running": false
    }
  ]
}
