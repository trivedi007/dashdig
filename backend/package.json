{
  "name": "dashdig-backend",
  "version": "1.2.0",
  "description": "Dashdig backend API - Humanize and Shortenize URLs with AI-powered contextual shortening",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:pattern": "vitest run tests/smartUrl.test.js",
    "test:api": "vitest run tests/slugApi.integration.test.js",
    "test:smart-urls": "jest tests/smart-url-generator.test.js --forceExit",
    "test:smart-urls:watch": "jest tests/smart-url-generator.test.js --watch",
    "test:fix": "node ../tests/auto-fix-slugs.js",
    "test:all": "npm run test && npm run test:smart-urls"
  },
  "keywords": [
    "url-shortener",
    "humanize-urls",
    "shortenize",
    "dashdig",
    "ai-url-shortener",
    "human-readable-links",
    "smart-urls",
    "contextual-shortening",
    "ai",
    "nodejs"
  ],
  "author": "Dashdig Team",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nanoid": "^3.3.7",
    "nodemailer": "^7.0.6",
    "openai": "^4.20.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.2",
    "rate-limiter-flexible": "^2.0.0",
    "redis": "^4.6.10",
    "speakeasy": "^2.0.0",
    "stripe": "^18.5.0",
    "twilio": "^5.10.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "vitest": "^1.0.4"
  }
}
