{
  "name": "Dashdig Design System",
  "version": "1.0.0",
  "description": "Complete design system extracted from Dashdig homepage",
  
  "colors": {
    "primary": {
      "orange": "#FF6B35",
      "orangeSecondary": "#F7931E",
      "gradient": "linear-gradient(135deg, #FF6B35 0%, #F7931E 100%)"
    },
    "secondary": {
      "teal": "#4ECDC4",
      "yellow": "#FFE66D"
    },
    "neutral": {
      "dark": "#2D3436",
      "light": "#F8F9FA",
      "white": "#FFFFFF",
      "gray": {
        "100": "#e0e0e0",
        "200": "#999",
        "300": "#666",
        "400": "#555"
      }
    },
    "background": {
      "primary": "#F8F9FA",
      "secondary": "linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%)",
      "business": "linear-gradient(135deg, #2d3436 0%, #1a1a2e 100%)",
      "animation": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
    },
    "text": {
      "primary": "#2D3436",
      "secondary": "#666",
      "muted": "#999",
      "business": "#e0e0e0"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif",
      "monospace": "monospace"
    },
    "fontSize": {
      "xs": "0.9rem",
      "sm": "1rem",
      "base": "1.1rem",
      "lg": "1.2rem",
      "xl": "1.5rem",
      "2xl": "3.5rem",
      "3xl": "3rem"
    },
    "fontWeight": {
      "normal": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.1",
      "normal": "1.6",
      "relaxed": "1.6"
    }
  },

  "spacing": {
    "xs": "0.5rem",
    "sm": "1rem",
    "md": "1.5rem",
    "lg": "2rem",
    "xl": "3rem",
    "2xl": "4rem",
    "3xl": "5rem",
    "section": "5%",
    "container": "1200px"
  },

  "borderRadius": {
    "sm": "8px",
    "md": "10px",
    "lg": "20px",
    "full": "50px"
  },

  "shadows": {
    "sm": "0 2px 10px rgba(0,0,0,0.05)",
    "md": "0 4px 15px rgba(255, 107, 53, 0.3)",
    "lg": "0 10px 40px rgba(0,0,0,0.1)",
    "xl": "0 20px 40px rgba(0,0,0,0.1)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #FF6B35 0%, #F7931E 100%)",
        "color": "#FFFFFF",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "50px",
        "fontWeight": "600",
        "boxShadow": "0 4px 15px rgba(255, 107, 53, 0.3)",
        "transition": "all 0.3s ease"
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#2D3436",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "50px",
        "border": "2px solid #e0e0e0",
        "fontWeight": "600",
        "transition": "all 0.3s ease"
      },
      "convert": {
        "background": "linear-gradient(135deg, #FF6B35 0%, #F7931E 100%)",
        "color": "#FFFFFF",
        "padding": "1rem 2rem",
        "borderRadius": "10px",
        "fontSize": "1.1rem",
        "fontWeight": "600",
        "border": "none",
        "transition": "all 0.3s ease"
      }
    },
    "input": {
      "primary": {
        "padding": "1rem",
        "border": "2px solid #e0e0e0",
        "borderRadius": "10px",
        "fontSize": "1rem",
        "transition": "all 0.3s ease"
      },
      "business": {
        "background": "rgba(255,255,255,0.1)",
        "borderColor": "#555",
        "color": "#FFFFFF"
      }
    },
    "card": {
      "primary": {
        "background": "#F8F9FA",
        "padding": "2rem",
        "borderRadius": "20px",
        "boxShadow": "0 10px 40px rgba(0,0,0,0.1)"
      },
      "feature": {
        "background": "#FFFFFF",
        "padding": "2rem",
        "borderRadius": "20px",
        "textAlign": "center",
        "transition": "all 0.3s ease",
        "hover": {
          "transform": "translateY(-10px)",
          "boxShadow": "0 20px 40px rgba(0,0,0,0.1)"
        }
      },
      "business": {
        "background": "linear-gradient(135deg, #2d3436 0%, #1a1a2e 100%)"
      }
    },
    "navigation": {
      "padding": "1.5rem 5%",
      "background": "#FFFFFF",
      "boxShadow": "0 2px 10px rgba(0,0,0,0.05)",
      "position": "fixed",
      "zIndex": "1000"
    },
    "hero": {
      "marginTop": "80px",
      "padding": "4rem 5%",
      "minHeight": "700px",
      "background": "#FFFFFF"
    }
  },

  "animations": {
    "slideDown": {
      "from": "transform: translateY(-100%)",
      "to": "transform: translateY(0)",
      "duration": "0.5s",
      "easing": "ease"
    },
    "hover": {
      "duration": "0.3s",
      "easing": "ease"
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1200px",
      "margin": "0 auto"
    },
    "grid": {
      "features": "repeat(auto-fit, minmax(300px, 1fr))",
      "gap": "2rem"
    },
    "flex": {
      "gap": "1rem",
      "gapLarge": "2rem"
    }
  },

  "zIndex": {
    "background": "-1",
    "navigation": "1000"
  },

  "opacity": {
    "disabled": "0.6",
    "animation": "0.05"
  }
}
